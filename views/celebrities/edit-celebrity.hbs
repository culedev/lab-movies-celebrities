<h2>Edit Celebrity</h2>

<form action="/celebrities/{{eachCelebrity._id}}/edit" method="POST">

  <label for="name" class="form-label">name:</label>
  <input type="text" name="name" value="{{eachCelebrity.name}}" class="form-control"/>
  <br />
  <label for="occupation" class="form-label">occupation:</label>
  <input type="text" name="occupation" value="{{eachCelebrity.occupation}}" class="form-control"/>
  <br />
  <label for="catchPhrase" class="form-label">Catch Phrase:</label>
  <input type="text" name="catchPhrase" value="{{eachCelebrity.catchPhrase}}" class="form-control"/>
  <br />
 
  <button class="btn btn-success">Update Celebrity</button>

</form>