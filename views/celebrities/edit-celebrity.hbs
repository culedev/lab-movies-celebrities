<h2>Edit Celebrity</h2>

<form action="/celebrities/{{eachCelebrity._id}}/edit" method="POST">

  <label for="name">name:</label>
  <input type="text" name="name" value="{{eachCelebrity.name}}" />
  <br />
  <label for="occupation">occupation:</label>
  <input type="text" name="occupation" value="{{eachCelebrity.occupation}}" />
  <br />
  <label for="catchPhrase">Catch Phrase:</label>
  <input type="text" name="catchPhrase" value="{{eachCelebrity.catchPhrase}}" />
  <br />
 
  <button>Update Celebrity</button>

</form>