<h2>Edit Page</h2>

<form action="/movies/{{eachMovie._id}}/edit" method="POST">

  <label for="title">Title:</label>
  <input type="text" name="title" value="{{eachMovie.title}}" />
  <br />
  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="{{eachMovie.genre}}" />
  <br />
  <label for="plot">Plot:</label>
  <input type="text" name="plot" value="{{eachMovie.plot}}" />
  <br />
  <label for="cast">Cast:</label>
  <select name="cast">
    {{#each allCelebrities}}
      <option value="{{this._id}}">{{this.name}}</option>
    {{/each}}
  </select>
  <br />
  <button>Update Movie</button>

</form>