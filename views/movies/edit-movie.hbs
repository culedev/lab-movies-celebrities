<h2>Edit Page</h2>
<div class="form-outline">
  <form action="/movies/{{eachMovie._id}}/edit" method="POST">

    <label for="title" class="form-label">Title:</label>
    <input type="text" name="title" value="{{eachMovie.title}}" class="form-control" />
    <br />
    <label for="genre" class="form-label">Genre:</label>
    <input type="text" name="genre" value="{{eachMovie.genre}}" class="form-control"/>
    <br />
    <label for="plot" class="form-label">Plot:</label>
    <input type="text" name="plot" value="{{eachMovie.plot}}" class="form-control"/>
    <br />
    <label for="cast">Cast:</label>
    <select name="cast" class="form-select">
      {{#each allCelebrities}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
    <br />
    <button class="btn btn-success">Update Movie</button>

  </form>
</div>